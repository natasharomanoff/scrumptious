= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-signup'}) do |f|
  %h2.form-signup-heading Sign up
  = devise_error_messages!
  = f.email_field :email, :autofocus => true, :placeholder => "Email address", :class => 'form-control'
  = f.password_field :password, :placeholder => "Password", :class => 'form-control'
  = f.password_field :password_confirmation, :placeholder => "Password Confirmation", :class => 'form-control'
  %div= f.submit "Sign up", :class => 'btn btn-lg btn-primary btn-block'
  %hr
  = render "devise/shared/links"